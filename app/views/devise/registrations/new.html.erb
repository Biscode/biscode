<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, placeholder: 'email', autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "password (#{@minimum_password_length} characters minimum)", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: 'password confirmation', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'small button round' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
